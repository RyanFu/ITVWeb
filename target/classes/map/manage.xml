<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itv.manage">
    <select id="login" parameterType="String" resultType="String">
        select password from user where username= #{value} limit 0,1
    </select>

    <select id="findFillMovie" parameterType="movie" resultType="String">
        select id,name,director,actor,year,imgUrl,less,supplies from movie
        <where>
            <if test="name == 1">
                name is null
            </if>
            <if test="director == 1">
                or director is null
            </if>
            <if test="actor == 1">
                or actor is null
            </if>
            <if test="area == 1">
                or area is null
            </if>
            <if test="year == 1">
                or year is null
            </if>
            <if test="less == 1">
                or less is null
            </if>
            <if test="imgUrl == 1">
                or imgUrl is null
            </if>
            <if test="supplies == 1">
                or supplies is null
            </if>
        </where>
        order by year desc limit 0,10
    </select>
</mapper>